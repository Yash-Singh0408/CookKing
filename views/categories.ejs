<h1 class="pb-4">Explore categories</h1>

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb fw-bolder">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
      <li class="breadcrumb-item active" aria-current="page">Explore categories</li>
    </ol>
  </nav>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 py-4">  
<% if(typeof categories !== 'undefined' && categories.length >0) { %>
    <% categories.forEach(function(categories, index) { %>
     <a href="/categories/<%- categories.name %>" class="col text-center Categori_link">
       <div class="Categori_img Categori_img--medium shadow">
        <img src="img/<%- categories.image %>"  alt="<%- categories.name %>" loading="lazy" >
       </div>
       <div class="pt-1 blue"><%- categories.name %></div>
     </a>
    <% }) %>
  <% } %>
</div>



<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 ">
  <% if(typeof categoryById !== 'undefined' && categoryById.length >0) { %>
   <% categoryById.forEach(function(recipe, index){ %>
  <a href="/recipe/<%= recipe.id %>" class="col text-center Categori_link"  style="width: 280px;">
    <div class="Categori_img category__img--large shadow">
      <img
        src="/uploads/<%= recipe.image %>"
        alt="<%= recipe.name %>"
        loading="lazy"
      />
    </div>
    <div class="pt-1 blue"><%= recipe.name %></div>
  </a>
  <% }) %>
   <% } %>
    
</div>
<h1 class="pb-4 fw-bold">Search Results</h1>

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 ">
    <% if(recipe != '') { %>
     <% recipe.forEach(function(recipe, index){ %>
    <a href="/recipe/<%= recipe.id %>" class="col text-center Categori_link"  style="width: 280px;">
      <div class="Categori_img category__img--large shadow">
        <img
          src="/uploads/<%= recipe.image %>"
          alt="<%= recipe.name %>"
          loading="lazy"
        />
      </div>
      <div class="pt-1 blue"><%= recipe.name %></div>
    </a>
    <% }) %>
   <% } else { %>
    <p class="fw-bold mt-4">No Results</p>
    <% } %>
  </div>
<!-- Categories -->
<section class="px-4 py-4 my-4 text-center">
  <div class="d-flex mb-2 align-items-center">
    <h1 class="fw-bold">Our Categories</h1>
  </div>

  <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(categories != '') { %> <% categories.forEach(function(categories,
    index) { %>
    <a
      href="/categories/<%- categories.name %>"
      class="col text-center Categori_link"
    >
      <div class="Categori_img shadow">
        <img
          src="img/<%- categories.image %>"
          alt="<%- categories.name %>"
          loading="lazy"
        />
      </div>
      <div class="pt-1 blue"><%- categories.name %></div>
    </a>
    <% }) %> <% } %>

    <a href="/categories" class="col text-center Categori_link">
      <div class="Categori_img shadow">
        <img src="img/view-all.jpg" width="100px" alt="" loading="lazy" />
      </div>
      <div class="pt-1 blue">View All</div>
    </a>
  </div>
</section>
<!-- Categories end-->

